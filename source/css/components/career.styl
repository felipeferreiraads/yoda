.career
    min-height: 100vh
    display: flex
    padding: 0 20px
    .text
        flex-basis: 60%
        padding-top: 150px
        padding-left: calc((100% - 1280px) / 2)
        padding-right: 10%
        padding-bottom: 100px
        p
            font-size: 16px
            color: $color.text
            line-height: 2
            &:not(:last-child)
                margin-bottom: 30px
        p.featured
            font-weight 800
            color: $color.primary
            font-size: 18px
    .content
        padding-top: 100px
    header
        display flex
        padding-bottom: 100px
        position relative
        &::after
            content: ''
            width: 170%
            height: 2px
            background: $color.secondary
            position absolute
            bottom: 0
            right: calc(50% + ((100% - 1280px) / 2))
        figure
            width: 150px
            height: 150px
            img
                width: 100%
                height 100%
                object-fit: contain
        .info
            flex: 1
            padding-left: 20px
            h1
                color: $color.text
                font-size: 40px
                font-weight: 300
                text-transform: uppercase
                letter-spacing: 5px
                margin-bottom: 15px
            p
                font-size: 20px
                line-height: 1.6
                span
                    color: $color.primary
                    font-weight: 800
                    font-size: 30px
    .image
        flex: 1
        position relative
        .yoda
            max-width 100%
            max-height: 95%
            position absolute
            bottom 0
            left: 0
            z-index: 1
        .bg
            min-width 100%
            min-height: 100%
            position absolute
            bottom: 0
            left: 0

.feature
    padding: 80px 0
    background: $color.text
    .grid
        display flex
        align-items: center
    .logo
        width: 35%
        padding-right: 50px
    .text
        padding-left: 50px
        border-left: 1px solid white
        p
            color white
            line-height: 2
.yotalkshow
    background: url(../img/bg-yotalkshow.jpg) center no-repeat
    background-size: cover
    .text
        border-left: 1px solid $color.primary