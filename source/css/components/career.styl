.career
    display: flex
    padding: 0 20px
    .text
        flex-basis: 60%
        padding-top: 150px
        padding-left: calc((100% - 1280px) / 2)
        padding-right: 10%
        padding-bottom: 100px
        +below($bp.lg)
            flex-basis: 100%
            padding: 100px 0 50px 0
        p
            font-size: 16px
            color: $color.text
            line-height: 2
            &:not(:last-child)
                margin-bottom: 30px
        p.featured
            font-weight 800
            color: $color.primary
            font-size: 18px
    .content
        padding-top: 100px
        +below($bp.lg)
            padding-top: 50px
    header
        display flex
        padding-bottom: 100px
        position relative
        +below($bp.lg)
            flex-direction: column
            align-items: center
            padding-bottom: 50px
        &::after
            content: ''
            width: 170%
            height: 2px
            background: $color.secondary
            position absolute
            bottom: 0
            right: calc(50% + ((100% - 1280px) / 2))
            +below($bp.lg)
                width: 70%
                left: -20px
                right: auto
        figure
            width: 150px
            height: 150px
            +below($bp.lg)
                width: 80px
                height: 80px
                margin-bottom: 20px
            img
                width: 100%
                height 100%
                object-fit: contain
        .info
            flex: 1
            padding-left: 20px
            h1
                color: $color.text
                font-size: 40px
                font-weight: 300
                text-transform: uppercase
                letter-spacing: 5px
                margin-bottom: 15px
                +below($bp.lg)
                    font-size: 30px
            p
                font-size: 20px
                line-height: 1.6
                +below($bp.lg)
                    font-size: 16px
                    line-height: 1.4
                span
                    color: $color.primary
                    font-weight: 800
                    font-size: 30px
    .image
        flex: 1
        position relative
        +below($bp.lg)
            display: none
        .yoda
            max-width 100%
            max-height: 95%
            position absolute
            bottom 0
            left: 0
            z-index: 1
        .bg
            min-width 100%
            min-height: 100%
            position absolute
            bottom: 0
            left: 0

.feature
    padding: 80px 0
    background: $color.text
    +below($bp.lg)
        padding: 50px 0
    .grid
        display flex
        align-items: center
        +below($bp.lg)
            flex-direction: column
    .logo
        display flex
        justify-content: center
        +above($bp.lg)
            flex-basis: 30%
            padding-right: 50px
        +below($bp.lg)
            margin-bottom: 30px
        img
            max-width 100%
            +below($bp.lg)
                max-width 150px
    .text
        +above($bp.lg)
            flex-basis: 70%
            padding-left: 50px
            border-left: 1px solid white
        p
            color white
            line-height: 2
.yotalkshow
    background: url(../img/bg-yotalkshow.jpg) center no-repeat
    background-size: cover
    .text
        +above($bp.lg)
            border-left: 1px solid $color.primary

.noline
    background: #44bbc3

.awards
    padding: 70px 0
    +below($bp.lg)
        padding: 50px 0
    .grid
        display flex
        align-items: center
        +below($bp.lg)
            flex-direction: column-reverse
            align-items: center
    p
        font-size: 22px
        color: $color.text
        text-align: right
        padding: 0 20px 0 30%
        +below($bp.lg)
            padding: 0
            text-align: center
            font-size: 18px
    img
        height: 150px
        +below($bp.lg)
            height 100px
            margin-bottom: 20px

.proplayer
    padding-bottom: 100px
    +below($bp.lg)
        padding-bottom: 50px
    h2
        font-size: 35px
        color: $color.primary
        text-transform: uppercase
        margin-bottom: 25px
    p
        color: $color.text
        line-height: 2
        img
            float right
            margin: -55px 0 20px 30px
            +below($bp.lg)
                float none
                display block
                margin: 0 0 20px 0
                max-width: 100%
        span
            display block
            font-size: 50px
            color: $color.secondary
            text-align: center
            font-weight: 800
    &::after
        content: ''
        clear both
        display block