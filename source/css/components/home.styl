.home
    .left
        width 50%
        height 100vh
        background: url(../img/logo.jpg) 100% 60% no-repeat
        background-size auto 60%
        position: absolute
        top: 0
        left: 0
        +below($bp.lg)
            display: none
    .mail
        position absolute
        bottom 30px
        left: calc((100% - 1280px) / 2)
        display: flex
        align-items: center
        +below($bp.xlg)
            left: 20px
        span
            color: $color.text
            +below($bp.lg)
                color white
        .fa
            font-size: 20px
            color: $color.primary
            margin-right: 10px
    .right
        height 100vh
        +above($bp.lg)
            width 70%
            position absolute
            top: 0
            right 0
            z-index 1
        +below($bp.lg)
            background: url(../img/yoda-mobile.jpg) top center no-repeat
            background-size: cover
        h1
            font-size 80px
            color: $color.secondary
            font-weight 800
            position absolute
            bottom: 25%
            left: 28%
            line-height 1
            z-index: 1
            &:first-line
                font-size 50px
                color white
                font-weight 300
            +below($bp.lg)
                left: 20px
                bottom: 200px
                font-size: 60px
                &:first-line
                    font-size 35px
        .yoda
            min-width: 100%
            min-height: 100%
            position absolute
            bottom: 0
            left: 0
            +below($bp.lg)
                display none
        .logo
            position absolute
            bottom 30px
            right 20px
            z-index: 2