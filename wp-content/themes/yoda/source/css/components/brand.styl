.partners
    width 100%
    padding: 50px 0
    background: $color.gray-light
    .grid
        overflow hidden
    .owl-stage-outer
        width 100%
        height 100%
    .owl-stage
        display flex
        justify-content: space-between
        align-items: center
        +below($bp.lg)
            flex-wrap: wrap
        a
            +below($bp.lg)
                width: 50%
                display flex
                justify-content: center
                &:nth-child(n+3)
                    margin-top: 50px
            +below($bp.sm)
                width: 100%
                &:nth-child(n+2)
                    margin-top: 50px
    .owl-item
        display flex
        justify-content: center
    .disabled
        display none

    h2
        font-size: 40px
        font-weight: 300
        text-align: center
        text-transform: uppercase
        color: $color.gray-dark
        margin-bottom: 30px
        letter-spacing: 5px
        +below($bp.md)
            font-size: 30px
    .prev, .next
        width: 35px
        height: 35px
        border-radius: 100%
        background: $color.gray-dark
        border: none
        cursor pointer
        color white
        font-size: 20px
        transition: .2s
        outline: none
        &:hover
            opacity 0.8
    .arrows
        display flex
        justify-content: space-between
        width: 75px
        margin: 30px auto 0